<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/liner"
    android:layout_height="match_parent"
    android:weightSum="2"
    tools:context="com.example.anil.aplayer.SongPlayer">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:id="@+id/image"
        android:background="@drawable/music_bg"
        android:layout_margin="2dp"
        android:layout_weight="1.5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="hi"
        android:textSize="20sp"
        android:textColor="#faeade"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:background="#9ac29a"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:id="@+id/song_ti"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#9ac29a"
        android:gravity="center"
        android:layout_weight="0.1">
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="0.1"
            android:id="@+id/max_duration"
            android:layout_height="match_parent"
            tools:text="00:00"/>
    <SeekBar
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/seekbar"
        android:layout_weight="0.8"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/current_duration"
            android:layout_weight="0.1"
            tools:text="00:00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="#9ac29a"
        android:layout_weight="0.3">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/shuffle"
            android:onClick="songs"
            android:src="@drawable/ic_shuffle_black_24dp"
            android:layout_weight="0.5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/previous"
            android:onClick="songs"
            android:background="@drawable/item_click"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:layout_weight="1.5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/play"
            android:onClick="songs"
            android:background="@drawable/item_click"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            android:layout_weight="2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/next"
            android:onClick="songs"
            android:background="@drawable/item_click"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:layout_weight="1.5"
            tools:ignore="OnClick" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/repeat"
            android:onClick="songs"
            android:src="@drawable/ic_repeat_one_black_24dp"
            android:layout_weight="0.5"
            tools:ignore="OnClick" />

    </LinearLayout>
</LinearLayout>
